<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/company_recommend_gradient_bg"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/ivCompanyLogo"
        android:layout_width="@dimen/head_size"
        android:layout_height="@dimen/head_size"
        android:src="@mipmap/pic_default_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivCompanyLogo"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            style="@style/txt_first_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"/>
        <TextView
            style="@style/txt_second_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/txt_margin_small"
            android:text="杭州帅车网络科技有限公司"/>
    </LinearLayout>


</RelativeLayout>