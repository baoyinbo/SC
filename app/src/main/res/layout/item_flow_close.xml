<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="18dp"
    android:background="@drawable/label_corner_2_gray_border_white_bg"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:layout_margin="@dimen/txt_line_space">
    <TextView
        android:id="@+id/tvName"
        style="@style/txt_third_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginRight="@dimen/txt_line_space"
        android:layout_marginLeft="@dimen/txt_line_space"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_label_close"
        android:layout_marginRight="@dimen/txt_line_space"/>
</LinearLayout>